<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nl.pm.server.registry.dao.SystemEmailDao">

    <select id="querySystemEmailByUserName" resultType="integer">
        SELECT COUNT(1) FROM `system_email` WHERE username = #{userName}
    </select>

    <select id="queryEmailIsSend" resultType="com.nl.pm.server.registry.entity.SystemEmailEntity">
        SELECT 	`id`,
        `host`,
        `username`,
        `password`,
        `send_num`

        FROM
        `system_email`
        WHERE send_num <![CDATA[>=]]> 0
        AND send_num <![CDATA[<]]> 90
        LIMIT 0, 1;
    </select>
    <update id="initSystemEmail">
        UPDATE `system_email`
        SET
        `send_num` = 0
    </update>
</mapper>