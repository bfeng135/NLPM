<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nl.pm.server.registry.dao.LogDao">

    <insert id="addSystemLog">
        insert into operation_log(id, module, operate, content, user_id,username,area_id, ip, operate_time) VALUES
        (#{log.id},#{log.module},#{log.operate},#{log.content},#{log.userId},#{log.username},#{log.areaId},#{log.ip},#{log.operateTime})
    </insert>

    <select id="querySystemLogPaging" resultType="com.nl.pm.server.registry.entity.OperationLogEntity">
        select *
        from operation_log log
        where 1=1
        <if test="module != null and module != ''">
            and log.module = #{module}
        </if>
        <if test="operate != null and operate != ''">
            and log.operate = #{operate}
        </if>
        <if test="userId != null">
            and log.user_id = #{userId}
        </if>
        <if test="areaId != null">
            and tdu.area_id = #{areaId}
        </if>
        <if test="start != null and end != null">
            and log.operate_time <![CDATA[>=]]> #{start}
            and #{end} <![CDATA[>=]]>  log.operate_time
        </if>
        <if test="start == null and end != null">
            and #{end} <![CDATA[>=]]>  log.operate_time
        </if>
        <if test="start != null and end == null">
            and log.operate_time <![CDATA[>=]]> #{start}
        </if>
        order by log.operate_time desc
    </select>
</mapper>
